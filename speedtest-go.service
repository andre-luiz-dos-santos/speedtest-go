[Unit]
Description=SpeedTest Go

[Service]
Type=simple
Restart=always
RestartSec=5s
User=speedtest-go
Group=speedtest-go
ExecStart=/home/speedtest-go/speedtest-go -bind=:80 -root=/home/speedtest-go/static
ProtectSystem=full
CapabilityBoundingSet=CAP_NET_BIND_SERVICE
AmbientCapabilities=CAP_NET_BIND_SERVICE
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
